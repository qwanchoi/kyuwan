<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.qwan.prj.student.service.StudentMapper">
	<select id="studentSelectList" 
		resultType="co.qwan.prj.student.vo.StudentVO">
		SELECT * FROM STUDENT
	</select>
	
	<select id="studentSelect"
		parameterType="co.qwan.prj.student.vo.StudentVO"
		resultType="co.qwan.prj.student.vo.StudentVO">
		
		SELECT * FROM STUDENT
		WHERE ID = #{id}
			<if test="password != null">
				AND PASSWORD = #{password}
			</if>
	</select>
	
	<insert id="studentInsert" parameterType="co.qwan.prj.student.vo.StudentVO">
		INSERT INTO STUDENT 
		VALUES(#{id}, #{password}, #{name}, #{address}, #{tel}, #{birthday}, #{age})
	</insert>
	
	<update id="studentUpdate" parameterType="co.qwan.prj.student.vo.StudentVO">
		UPDATE STUDENT 
		SET name = #{name}
		WHERE id = #{id}
	</update>
	
	<delete id="studentDelete" parameterType="co.qwan.prj.student.vo.StudentVO">
		DLETE FROM STUDENT
		WHERE id = #{id}
	</delete>
	
	<select id="idCheck" parameterType="String" resultType="boolean">
		SELECT CASE WHEN COUNT(id) = 1 THEN 1 ELSE 0 END AS id
		FROM student
		WHERE id = #{id}
	</select>
	
</mapper>